<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">


<insert id="setBoard" parameterType="java.util.HashMap">
insert into noticeboard values(noticeboard_seq.nextval,#{id}, #{title}, #{leftdate}, #{content},0,#{attach})
</insert>
<select id="totalBoard" resultType="java.lang.Integer">
select count(*) as cnt from NOTICEBOARD
</select>
<select id="boardList" resultType="java.util.HashMap" parameterType="java.util.HashMap">
select * from (select rownum as r, d.* from(select * from NOTICEBOARD order by leftdate desc) d) where r between #{start} and #{end}
</select>
<select id="boardDetail" parameterType="java.lang.String" resultType="java.util.HashMap">
select * from NOTICEBOARD where no=#{no}
</select>


</mapper>